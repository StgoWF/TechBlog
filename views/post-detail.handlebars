<h2>{{post.title}}</h2>
<p>{{post.content}}</p>

{{!-- Ensure that comments are being loaded correctly --}}
{{#if post.Comments}}
    <h3>Comments</h3>
    {{#each post.Comments}}
    <div class="comment">
        <p>{{this.content}}</p>
        {{!-- Verify that the user model is being included and referenced correctly --}}
        <p>Comment by: {{this.user.username}}</p>
    </div>
    {{/each}}
{{else}}
    <p>No comments yet. Be the first to comment!</p>
{{/if}}

{{!-- Form to add a comment --}}
<h3>Add a Comment</h3>
<form action="/posts/comment/{{post.id}}" method="POST">
    <textarea name="content" required placeholder="Add a comment..."></textarea>
    <button type="submit">Submit</button>
</form>
