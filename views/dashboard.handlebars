<h1>Your Dashboard</h1>
{{#if posts.length}}
    {{#each posts}}
        <div class="post">
            <h2>{{this.title}}</h2>
            <p>{{this.content}}</p>
            <a href="/posts/{{this.id}}" class="btn">Read More & Comment</a>
            <!-- Options to edit and delete their own posts -->
            <a href="/posts/edit/{{this.id}}" class="btn">Edit</a>
            <form action="/posts/delete/{{this.id}}" method="POST">
                <button type="submit" class="btn">Delete</button>
            </form>
        </div>
    {{/each}}
{{else}}
    <p>No posts yet. <a href="/posts/new">Create one</a>!</p>
{{/if}}
