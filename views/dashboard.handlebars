<h1>Your Dashboard</h1>
{{#if posts.length}}
    {{#each posts}}
        <div class="post">
            <h2>{{this.title}}</h2>
            <p>{{this.content}}</p>
            <!-- Links para editar y eliminar posts -->
            <a href="/posts/edit/{{this.id}}">Edit</a>
            <a href="/posts/delete/{{this.id}}">Delete</a>
        </div>
    {{/each}}
{{else}}
    <p>No posts yet. <a href="/posts/new">Create one</a>!</p>
{{/if}}
